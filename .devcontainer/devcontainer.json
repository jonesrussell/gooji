{
    "name": "Goforms",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspaces/gooji",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "username": "automatic"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "eamodio.gitlens",
                "a-h.templ"
            ],
            "settings": {
                "[templ]": {
                    "editor.defaultFormatter": "a-h.templ"
                }
            }
        }
    },
    "forwardPorts": [
        3000,
        8090,
        8098
    ],
    "postCreateCommand": [
        "bash",
        "-c",
        "go mod download && curl -sSfL https://taskfile.dev/install.sh | sh && curl -sSfL https://raw.githubusercontent.com/nektos/act/master/install.sh | bash"
    ],
    "remoteUser": "vscode"
}
